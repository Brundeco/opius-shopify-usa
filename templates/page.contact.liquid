{% comment %} {% render 'preloader-short' %} {% endcomment %}

{% for block in shop.metaobjects.contact_page.values %}
  <div class="bg-black">
    <div class=" h-[70vh] lg:h-[75vh] w-full flex justify-center items-center relative overflow-hidden">
      <div class=" absolute inset-0">
        {% render 'video' %}
      </div>
      <h1 class="text-center text-opiusBeige text-xl xl:text-3xl relative -rotate-[7deg] tracking-[0.1em] uppercase italic !lg:leading-10">
        For any queries <br>
        feel free to <br>
        reach out
        {% comment %} <br> {% endcomment %}
        {% comment %}
          Take advantage of <br>
          20% off sitewide
        {% endcomment %}
      </h1>
    </div>

    <div class="wrap mt-16 pb-4">
      <div class="mx-auto lg:gap-10 max-w-5xl">
        <h3 class="text-center uppercase text-xl lg:text-2xl max-w-lg mx-auto mt-4 lg:mt-0 text-opiusBeige">
          Any questions?
        </h3>

        <p class=" text-opiusBeige pt-4 pb-10 text-center">
          Please contact us directly at <br>
          <a href="mailto:info@on-bev.com" class="underline">info@on-bev.com </a>
        </p>
        {% comment %}
          <form
            action="/contact"
            method="post"
            accept-charset="UTF-8"
            class="text-opiusBeige pb-8 lg:pt-8 mx-auto flex flex-col justify-center items-center lg:flex-row gap-8"
          >
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="✓">

            <div class="text-black flex flex-col items-center justify-center">
              <div class="max-w-sm lg:max-w-xs flex flex-col justify-center gap-4 mb-5">
                <div class=" w-full">
                  <input
                    type="text"
                    id="contact-name"
                    name="contact[name]"
                    class="border border-black border-opacity-10 w-full h-7 p-2 placeholder-black text-sm rounded-md"
                    placeholder="Name"
                    required
                  >
                </div>

                <div class=" w-full flex gap-4">
                  <input
                    type="email"
                    id="contact-email"
                    name="contact[email]"
                    class="border border-black border-opacity-10 w-full h-7 p-2 placeholder-black text-sm rounded-md"
                    placeholder="Email"
                    required
                  >

                  <div>
                    <button
                      type="submit"
                      class=" text-black px-6 py-0.5 border-black rounded-md bg-white"
                    >
                      Join
                    </button>
                  </div>
                </div>
              </div>
              <p class=" text-opiusBeige text-sm">We respect your privacy</p>
            </div>
          </form>
        {% endcomment %}
      </div>
    </div>

    {% comment %}
      <div class="wrap mt-10">
        <div class="mx-auto lg:gap-10 max-w-5xl">
          <form
            action="/contact"
            method="post"
            accept-charset="UTF-8"
            class="text-opiusBeige pb-8 lg:pt-8 mx-auto flex flex-col lg:flex-row gap-8"
          >
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="✓">

            <div class="text-black lg:w-1/2 flex flex-col lg:items-end justify-center">
              <div class="max-w-sm lg:max-w-xs flex flex-col justify-center gap-4 mb-5">
                <div class=" w-full">
                  <input
                    type="text"
                    id="contact-name"
                    name="contact[name]"
                    class="border border-black border-opacity-10 w-full h-7 p-2 placeholder-black text-sm rounded-md"
                    placeholder="Name"
                    required
                  >
                </div>

                <div class=" w-full flex gap-4">
                  <input
                    type="email"
                    id="contact-email"
                    name="contact[email]"
                    class="border border-black border-opacity-10 w-full h-7 p-2 placeholder-black text-sm rounded-md"
                    placeholder="Email"
                    required
                  >

                  <div>
                    <button
                      type="submit"
                      class=" text-black px-6 py-0.5 border-black rounded-md bg-white"
                    >
                      Join
                    </button>
                  </div>
                </div>
              </div>
              <p class=" text-opiusBeige text-sm">We respect your privacy</p>
            </div>

            <div class="flex flex-col lg:w-1/2">
              <ul class=" xl:mb-6 text-sm flex-col flex gap-y-1.5 force-t-contact max-w-lg ">
                {{ block.why_subscribe | metafield_tag }}
              </ul>
            </div>
          </form>
        </div>
      </div>
    {% endcomment %}
  </div>

  <div class="wrap bg-black">
    <div class=" max-w-screen-2xl mx-auto">
      {% for block in shop.metaobjects.contact_page.values %}
        {% render 'logo-grid', heading: 'Our clients', logos_field: block.client_logos %}
        {% render 'logo-grid', heading: 'Top rated by', logos_field: block.top_rated_by_logos %}
      {% endfor %}
    </div>
  </div>
{% endfor %}
